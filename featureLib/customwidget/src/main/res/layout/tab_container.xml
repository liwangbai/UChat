<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:context=".HomeActivity"
        tools:layout_height="55dp">

        <LinearLayout
            android:id="@+id/homeWrap"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#F5F5F5"
            android:gravity="center">

            <ImageView
                android:id="@+id/homeIv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@mipmap/weixin_normal" />

            <TextView
                android:id="@+id/homeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_tab1"
                android:textColor="#222222"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/friendWrap"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#F5F5F5"
            android:gravity="center">

            <ImageView
                android:id="@+id/friendIv"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:src="@mipmap/contact_list_normal" />

            <TextView
                android:id="@+id/friendTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_tab2"
                android:textColor="#222222"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/moreWrap"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#F5F5F5"
            android:gravity="center">

            <ImageView
                android:id="@+id/moreIv"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:src="@mipmap/find_normal" />

            <TextView
                android:id="@+id/moreTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_tab3"
                android:textColor="#222222"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/meWrap"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#F5F5F5"
            android:gravity="center">

            <ImageView
                android:id="@+id/meIv"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:src="@mipmap/profile_normal"/>

            <TextView
                android:id="@+id/meTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_tab4"
                android:textColor="#222222"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>
</layout>